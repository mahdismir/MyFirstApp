    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <Button
                android:layout_gravity="center_vertical"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:background="@drawable/temperate"
                android:onClick="sendMessage"
                android:id="@+id/WStemperatebtn"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperate"
                android:textSize="20dp"
                android:id="@+id/WStextTemperate"
                android:layout_alignTop="@+id/WStemperatebtn"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="220dp"/>

            <Button
                android:layout_gravity="start"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:background="@drawable/desert"
                android:onClick="sendMessage"
                android:id="@+id/WSdesertbtn"
                android:layout_marginTop="215dp"
                android:layout_marginLeft="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desert"
                android:textSize="20dp"
                android:id="@+id/WStextdesert"
                android:layout_alignTop="@+id/WStemperatebtn"
                android:layout_marginTop="270dp"
                android:layout_marginLeft="220dp"/>


            <Button
                android:layout_gravity="start"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:background="@drawable/cool"
                android:onClick="sendMessage"
                android:id="@+id/WScoolbtn"
                android:layout_marginTop="415dp"
                android:layout_marginLeft="15dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cool"
                android:textSize="20dp"
                android:id="@+id/WStextCool"
                android:layout_alignTop="@+id/WStemperatebtn"
                android:layout_marginTop="470dp"
                android:layout_marginLeft="220dp"/>


            <Button
                android:layout_gravity="start"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:background="@drawable/tropical"
                android:onClick="sendMessage"
                android:id="@+id/WSTropicalbtn"
                android:layout_marginTop="615dp"
                android:layout_marginLeft="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tropical"
                android:textSize="20dp"
                android:id="@+id/WStextTropical"
                android:layout_alignTop="@+id/WStemperatebtn"
                android:layout_marginTop="670dp"
                android:layout_marginLeft="220dp"/>

        </RelativeLayout>
    </ScrollView>









