<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_display_categories"
    tools:context="com.example.thinkpad.myfirstapp.DisplayCategories"
    android:background="#58ce6f">

<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <Button
        android:layout_gravity="center_vertical"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/temperate"
        android:onClick="sendMessage"
        android:id="@+id/temperatebtn"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperate"
        android:textSize="20dp"
        android:id="@+id/textTemperate"
        android:layout_alignTop="@+id/temperatebtn"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="220dp"/>

    <Button
        android:layout_gravity="start"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/fern"
        android:onClick="sendMessage"
        android:id="@+id/desertbtn"
        android:layout_marginTop="215dp"
        android:layout_marginLeft="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desert"
        android:textSize="20dp"
        android:id="@+id/textdesert"
        android:layout_alignTop="@+id/temperatebtn"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="220dp"/>


    <Button
        android:layout_gravity="start"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/cool"
        android:onClick="sendMessage"
        android:id="@+id/coolbtn"
        android:layout_marginTop="415dp"
        android:layout_marginLeft="15dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cool"
        android:textSize="20dp"
        android:id="@+id/textCool"
        android:layout_alignTop="@+id/temperatebtn"
        android:layout_marginTop="470dp"
        android:layout_marginLeft="220dp"/>


    <Button
        android:layout_gravity="start"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/tropical"
        android:onClick="sendMessage"
        android:id="@+id/Tropicalbtn"
        android:layout_marginTop="615dp"
        android:layout_marginLeft="15dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tropical"
        android:textSize="20dp"
        android:id="@+id/textTropical"
        android:layout_alignTop="@+id/temperatebtn"
        android:layout_marginTop="670dp"
        android:layout_marginLeft="220dp"/>

    </RelativeLayout>
</ScrollView>
</RelativeLayout>